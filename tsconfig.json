{
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "CommonJS",
		"target": "ES6",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"exclude": ["src/**/*.spec.ts"]
}
